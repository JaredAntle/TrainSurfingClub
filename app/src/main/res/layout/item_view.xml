<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    cardView:cardCornerRadius="5dp"
    cardView:contentPadding="16dp"
    cardView:cardElevation="2dp"
    cardView:cardUseCompatPadding="true"
    cardView:cardBackgroundColor="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:padding="4dp"
                android:textSize="24sp"
                android:text="Record Here"
                android:fontFamily="monospace"
                android:textStyle="normal|bold"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                cardView:srcCompat="@drawable/ic_public_black_24dp"
                android:id="@+id/record"
                android:layout_weight="1" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@id/description"
            android:textStyle="normal|italic"
            android:fontFamily="monospace"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:text="Click to view more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details"
                android:gravity="center_horizontal"
                android:textStyle="normal|italic"
                android:layout_gravity="right"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                cardView:srcCompat="@drawable/ic_expand_less_black_24dp"
                android:id="@+id/chevron"
                android:layout_gravity="bottom|right"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>