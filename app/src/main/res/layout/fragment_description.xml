<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.install.trainsurfingclub.DescriptionFragment"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_dark">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Train Surfing Club"
                android:typeface="normal"
                android:textSize="28sp"
                android:fontFamily="monospace"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:id="@+id/welcome"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp" />

            <TextView
                android:text="Train surfing is the act of riding on the outside of a moving train, and is usually done for one of two reasons:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:textSize="18sp"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:fontFamily="monospace"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp" />

            <TextView
                android:text="1. The rider cannot afford the cost of riding inside the train."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description2"
                android:fontFamily="monospace"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp" />

            <TextView
                android:text="2. The rider seeks the danger induced thrill that goes along with train surfing."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description3"
                android:fontFamily="monospace"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp" />

            <TextView
                android:text="Here at Train Surfing Club, we enjoy all the excitement of train surfing, but our privately owned and licensed railroad is completely 'legal and safe'*."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description4"
                android:fontFamily="monospace"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:paddingTop="40dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp" />

            <TextView
                android:text="*Quote from our founder, Alfred Frusniart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/asterisk"
                android:fontFamily="monospace"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:paddingTop="40dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>